<!-- TODO: Use hx-progress to show spinner for slow aggregations/chart renders -->
<div id="chart-page-contianer" class="h-full w-full">
    <span id="chart_id" class="sr-only">{{ chart_id }}</span>
    <div class="flex flex-row space-x-4 justify-items-center place-items-center">
        <h3>{{ chart.name }}</h3>
        <div class="badge badge-outline">{{ chart.subkind }}</div>
    </div>
    <div id="chart-controls-and-plot-container" class="h-full w-full">
        {% block chart_controls_and_plot_container %}
            <div class="flex flex-row space-x-1">
                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">X-axis</span>
                    </div>
                    <select class="select select-bordered select-sm"
                            name="dimension_value"
                            hx-post="charts/update"
                            hx-vals="js:{chart_id: document.getElementById('chart_id').textContent, dimension_name: 'x'}"
                            hx-target="#chart-page-contianer"
                            hx-swap="innerHTML">
                        {% if chart.data.x.selected != '' %}
                            <option selected>{{ chart.data.x.selected }}</option>
                        {% else %}
                            {% if chart.data.x.mandatory %}
                                <option disabled selected></option>
                            {% else %}
                                <option selected></option>
                            {% endif %}
                        {% endif %}
                        {% for opt in chart.data.x.options %}
                            {% if opt != chart.data.x.selected %}<option>{{ opt }}</option>{% endif %}
                        {% endfor %}
                    </select>
                </label>
                {% if chart.data.y %}
                    <label class="form-control w-full max-w-xs">
                        <div class="label">
                            <span class="label-text">Y-axis</span>
                        </div>
                        <select class="select select-bordered select-sm"
                                name="dimension_value"
                                hx-post="charts/update"
