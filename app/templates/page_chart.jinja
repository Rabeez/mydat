                                {% endif %}
                            {% endif %}
                            {% for opt in chart.data.color.options %}
                                {% if opt != chart.data.color.selected %}<option>{{ opt }}</option>{% endif %}
                            {% endfor %}
                        </select>
                    </label>
                {% endif %}
                {% if chart.data.size %}
                    <label class="form-control w-full max-w-xs">
                        <div class="label">
                            <span class="label-text">Size</span>
                        </div>
                        <select class="select select-bordered select-sm"
                                name="dimension_value"
                                hx-post="charts/update"
                                hx-vals="js:{chart_id: document.getElementById('chart_id').textContent, dimension_name: 'size'}"
                                hx-target="#chart-page-contianer"
                                hx-swap="innerHTML">
                            {% if chart.data.size.selected != '' %}
                                <option selected>{{ chart.data.size.selected }}</option>
                            {% else %}
                                {% if chart.data.size.mandatory %}
                                    <option disabled selected></option>
                                {% else %}
                                    <option selected></option>
                                {% endif %}
                            {% endif %}
                            {% for opt in chart.data.size.options %}
                                {% if opt != chart.data.size.selected %}<option>{{ opt }}</option>{% endif %}
                            {% endfor %}
                        </select>
                    </label>
                {% endif %}
                {% if chart.data.symbol %}
                    <label class="form-control w-full max-w-xs">
                        <div class="label">
                            <span class="label-text">Symbol</span>
                        </div>
                        <select class="select select-bordered select-sm"
                                name="dimension_value"
                                hx-post="charts/update"
                                hx-vals="js:{chart_id: document.getElementById('chart_id').textContent, dimension_name: 'symbol'}"
                                hx-target="#chart-page-contianer"
                                hx-swap="innerHTML">
                            {% if chart.data.symbol.selected != '' %}
                                <option selected>{{ chart.data.symbol.selected }}</option>
                            {% else %}
                                {% if chart.data.symbol.mandatory %}
                                    <option disabled selected></option>
