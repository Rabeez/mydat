<div class="flex flex-row">
    <h3>{{ chart.name }}</h3>
    <div class="badge badge-outline">{{ chart.kind }}</div>
</div>
<div class="flex flex-row">
    <label class="form-control w-full max-w-xs">
        <div class="label">
            <span class="label-text">X-axis</span>
        </div>
        <select class="select select-bordered select-sm">
            {% if chart.data.x.selected is not none %}
                <option selected>{{ chart.data.x.selected }}</option>
            {% else %}
                <option disabled selected>-- Choose a value --</option>
            {% endif %}
            {% for opt in chart.data.x.options %}
                {% if opt != chart.data.x.selected %}<option>{{ opt }}</option>{% endif %}
            {% endfor %}
        </select>
    </label>
    {% if chart.data.y %}
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <span class="label-text">Y-axis</span>
            </div>
            <select class="select select-bordered select-sm">
                {% if chart.data.y.selected is not none %}
                    <option selected>{{ chart.data.y.selected }}</option>
                {% else %}
                    <option disabled selected>-- Choose a value --</option>
                {% endif %}
                {% for opt in chart.data.y.options %}
                    {% if opt != chart.data.y.selected %}<option>{{ opt }}</option>{% endif %}
                {% endfor %}
            </select>
        </label>
    {% endif %}
    {% if chart.data.color %}
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <span class="label-text">Color</span>
            </div>
            <select class="select select-bordered select-sm">
                {% if chart.data.color.selected is not none %}
                    <option selected>{{ chart.data.color.selected }}</option>
                {% else %}
                    <option disabled selected>-- Choose a value --</option>
                {% endif %}
                {% for opt in chart.data.color.options %}
                    {% if opt != chart.data.color.selected %}<option>{{ opt }}</option>{% endif %}
                {% endfor %}
            </select>
        </label>
    {% endif %}
    {% if chart.data.size %}
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <span class="label-text">Size</span>
            </div>
            <select class="select select-bordered select-sm">
                {% if chart.data.size.selected is not none %}
                    <option selected>{{ chart.data.size.selected }}</option>
                {% else %}
                    <option disabled selected>-- Choose a value --</option>
                {% endif %}
                {% for opt in chart.data.size.options %}
                    {% if opt != chart.data.size.selected %}<option>{{ opt }}</option>{% endif %}
                {% endfor %}
            </select>
        </label>
    {% endif %}
    {% if chart.data.symbol %}
        <label class="form-control w-full max-w-xs">
            <div class="label">
                <span class="label-text">Symbol</span>
            </div>
            <select class="select select-bordered select-sm">
                {% if chart.data.symbol.selected is not none %}
                    <option selected>{{ chart.data.symbol.selected }}</option>
                {% else %}
                    <option disabled selected>-- Choose a value --</option>
                {% endif %}
                {% for opt in chart.data.symbol.options %}
                    {% if opt != chart.data.symbol.selected %}<option>{{ opt }}</option>{% endif %}
                {% endfor %}
            </select>
        </label>
    {% endif %}
</div>
<div id="app-plot-container">{{ actual_chart|safe }}</div>
