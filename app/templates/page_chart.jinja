                                {% endif %}
                            {% endif %}
                            {% for opt in chart.data.symbol.options %}
                                {% if opt != chart.data.symbol.selected %}<option>{{ opt }}</option>{% endif %}
                            {% endfor %}
                        </select>
                    </label>
                {% endif %}
            </div>
            <div id="app-plot-container" class="h-[80%] pt-4">{{ actual_chart|safe }}</div>
        {% endblock %}
    </div>
</div>
